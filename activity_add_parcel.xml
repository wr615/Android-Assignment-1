<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_parcel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="edu.nyu.parceltrackingapp.AddParcelActivity">

    <TextView
        android:text="Add A Parcel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="14sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Apt No."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewAptNo" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextAptNo"
                android:layout_marginLeft="15dp"
                android:width="10dp"
                android:layout_width="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Arrive Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewArriveDate"
                android:textSize="14sp" />

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/textViewArriveDate1"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content" />

            <Button
                android:text="change date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDate" />


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewQuantity"
                android:textSize="14sp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextQuantity"
                android:layout_marginLeft="15dp"
                android:width="15dp"
                android:layout_width="wrap_content" />
        </TableRow>
    </TableLayout>

    <Button
        android:text="Add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdd"
        android:layout_marginTop="15dp" />

</LinearLayout>
